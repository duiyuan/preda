{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "predalog",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#date" },
    { "include": "#brackets" },
    { "include": "#invalid" },
    { "include": "#constant-number" },
    { "include": "#keyword-shard" },
    { "include": "#keyword-contract" },
    { "include": "#keyword-global" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.predalog",
          "match": "\\b(if|while|for|return)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.predalog",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.predalog",
          "match": "\\\\."
        }
      ]
    },
    "date": {
      "patterns": [
        {
          "name": "constant.numeric.predalog",
          "match": "\\b(((0|1)?[0-9][1-2]?)|(Jan(uary)?|Feb(ruary)?|Mar(ch)?|Apr(il)?|May|Jun(e)?|Jul(y)?|Aug(ust)?|Sept(ember)?|Oct(ober)?|Nov(ember)?|Dec(ember)?))[/|-|.| ]([0-2]?[0-9]|[3][0-1])[/|-|.| ]((19|20)?[0-9]{2})\\b"
        },
        {
          "name": "constant.numeric.predalog",
          "match": "\\b((19|20)?[0-9]{2}[/|-|.| ](((0|1)?[0-9][1-2]?)|(Jan(uary)?|Feb(ruary)?|Mar(ch)?|Apr(il)?|May|Jun(e)?|Jul(y)?|Aug(ust)?|Sept(ember)?|Oct(ober)?|Nov(ember)?|Dec(ember)?))[/|-|.| ]([0-2]?[0-9]|[3][0-1]))\\b"
        },
        {
          "name": "constant.numeric.predalog",
          "match": "\\b([0-2]?[0-9]|[3][0-1])[/|-|.| ](((0|1)?[0-9][1-2]?)|(Jan(uary)?|Feb(ruary)?|Mar(ch)?|Apr(il)?|May|Jun(e)?|Jul(y)?|Aug(ust)?|Sept(ember)?|Oct(ober)?|Nov(ember)?|Dec(ember)?))[/|-|.| ]((19|20)?[0-9]{2})\\b"
        }
      ]
    },

    "brackets": {
      "patterns": [{ "name": "invalid", "match": "[FF]" }]
    },

    "keyword-shard": {
      "patterns": [
        {
          "name": "storage.predalog",
          "match": "[a-zA-Z]+(#\\d+)?:"
        }
      ]
    },
    "keyword-global": {
      "patterns": [
        {
          "name": "storage.predalog",
          "match": "\\b(?i:global:)\\b"
        }
      ]
    },

    "keyword-contract": {
      "patterns": [
        {
          "name": "storage.modifier.predalog",
          "match": "(?i:contract\\s`\\w+`:\\S)"
        }
      ]
    },

    "invalid": {
      "patterns": [
        {
          "name": "invalid.predalog",
          "match": "\\b(?i:((.)*[a-z]|[0-9])*(Exception|Error|Failure|Fail))\\b"
        }
      ]
    },
    "constant-number": {
      "patterns": [
        {
          "include": "#number-decimal"
        },
        {
          "include": "#number-hex"
        },
        {
          "include": "#number-float"
        }
      ]
    },
    "number-decimal": {
      "match": "\\b(\\d+(((u|i)(8|16|32|64)?)|ib)?)\\b",
      "name": "constant.numeric.decimal.predalog"
    },
    "number-hex": {
      "match": "\\b(0[xX][a-fA-F0-9]+)(((u|i)(8|16|32|64))|ib)?\\b",
      "name": "constant.numeric.hexadecimal.predalog"
    },
    "number-float": {
      "match": "\\b(\\d*[.]\\d+)(f(256|512|1024))\\b",
      "name": "constant.numeric.float.predalog"
    },
    "constant-address": {
      "match": "\\b[a-zA-z0-9@]{58}:ed25519\\b",
      "name": "constant.numeric.decimal.predalog"
    },
    "constant-hash": {
      "match": "\\b[a-zA-z0-9@]{52}:hash\\b",
      "name": "constant.numeric.decimal.predalog"
    }
  },
  "scopeName": "source.predalog"
}
