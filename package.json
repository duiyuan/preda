{
  "name": "chsimudev",
  "displayName": "ChsimuDev",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ChsimuDev.run",
    "onCommand:ChsimuDev.edit",
    "onCommand:ChsimuDev.compile",
    "onCommand:ChsimuDev.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "ChsimuDev.run",
        "key": "ctrl+5",
        "mac": "cmd+5",
        "when": "editorTextFocus && resourceExtname == .script"
      },
      {
        "command": "ChsimuDev.edit",
        "key": "ctrl+6",
        "mac": "cmd+6",
        "when": "editorTextFocus && resourceExtname == .script"
      },
      {
        "command": "ChsimuDev.compile",
        "key": "ctrl+7",
        "mac": "cmd+7",
        "when": "editorTextFocus && resourceExtname == .prd"
      }
    ],
    "commands": [
      {
        "command": "ChsimuDev.run",
        "title": "Run Chsimu"
      },
      {
        "command": "ChsimuDev.edit",
        "title": "Edit Chsimu"
      },
      {
        "command": "ChsimuDev.compile",
        "title": "Run Compile"
      },
      {
        "command": "ChsimuDev.view",
        "title": "View Chsimu HTML"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ChsimuDev.run",
          "group": "1_ChsimuDev",
          "when": "resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.edit",
          "group": "1_ChsimuDev",
          "when": "resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.compile",
          "group": "1_ChsimuDev",
          "when": "resourceExtname == .prd"
        },
        {
          "command": "ChsimuDev.view",
          "group": "1_ChsimuDev",
          "when": "resourceExtname == .html"
        }
      ],
      "editor/context": [
        {
          "command": "ChsimuDev.run",
          "group": "1_ChsimuDev",
          "when": "editorTextFocus && resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.edit",
          "group": "1_ChsimuDev",
          "when": "editorTextFocus && resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.compile",
          "group": "1_ChsimuDev",
          "when": "editorTextFocus && resourceExtname == .prd"
        },
        {
          "command": "ChsimuDev.view",
          "group": "1_ChsimuDev",
          "when": "editorTextFocus && resourceExtname == .html"
        }
      ]
    },
    "configuration": {
      "title": "ChsimuDev",
      "properties": {
        "ChsimuDev.path": {
          "type": "string",
          "default": "",
          "description": "run Contract with local chsimu."
        }
      }
    }
  },
  "license": "ISC",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "watch": "npm-run-all -p watch:*",
    "watch:view": "cd web && cross-env NODE_ENV=development webpack --watch --mode development",
    "watch:extension": "tsc -watch -p ./",
    "compile": "npm-run-all compile:*",
    "compile:extension": "tsc -p ./",
    "compile:view": "cd web && cross-env NODE_ENV=production webpack --mode production",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/mustache": "^4.2.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "eslint": "^8.20.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^8.0.3",
    "less": "^4.1.1",
    "less-loader": "^8.1.1",
    "mocha": "^10.0.0",
    "node-fetch": "^3.2.10",
    "npm-run-all": "^4.1.5",
    "react-dev-utils": "^12.0.1",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.4",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "publisher": "rick",
  "dependencies": {
    "mustache": "^4.2.0"
  }
}
