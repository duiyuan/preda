{
  "name": "chsimudev",
  "displayName": "ChsimuDev",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ChsimuDev.run",
    "onCommand:ChsimuDev.edit",
    "onCommand:ChsimuDev.compile",
    "onCommand:ChsimuDev.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "ChsimuDev.run",
        "key": "ctrl+5",
        "mac": "cmd+5",
        "when": "editorTextFocus && resourceExtname == .script"
      },
      {
        "command": "ChsimuDev.edit",
        "key": "ctrl+6",
        "mac": "cmd+6",
        "when": "editorTextFocus && resourceExtname == .script"
      },
      {
        "command": "ChsimuDev.compile",
        "key": "ctrl+7",
        "mac": "cmd+7",
        "when": "editorTextFocus && resourceExtname == .prd"
      }
    ],
    "commands": [
      {
        "command": "ChsimuDev.run",
        "title": "Run Chsimu"
      },
      {
        "command": "ChsimuDev.edit",
        "title": "Edit Chsimu"
      },
      {
        "command": "ChsimuDev.compile",
        "title": "Run Compile"
      },
      {
        "command": "ChsimuDev.view",
        "title": "View HTML"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ChsimuDev.run",
          "group": "1_modification",
          "when": "resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.edit",
          "group": "1_modification",
          "when": "resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.compile",
          "group": "1_modification",
          "when": "resourceExtname == .prd"
        },
        {
          "command": "ChsimuDev.view",
          "group": "1_modification",
          "when": "resourceExtname == .html"
        }
      ],
      "editor/context": [
        {
          "command": "ChsimuDev.run",
          "group": "1_modification",
          "when": "editorTextFocus && resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.edit",
          "group": "1_modification",
          "when": "editorTextFocus && resourceExtname == .script"
        },
        {
          "command": "ChsimuDev.compile",
          "group": "1_modification",
          "when": "editorTextFocus && resourceExtname == .prd"
        },
        {
          "command": "ChsimuDev.view",
          "group": "1_modification",
          "when": "editorTextFocus && resourceExtname == .html"
        }
      ]
    },
    "configuration": {
      "title": "ChsimuDev",
      "properties": {
        "ChsimuDev.path": {
          "type": "string",
          "default": "",
          "description": "run Contract with local chsimu."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "publisher": "rick",
  "dependencies": {
    "@types/ejs": "^3.1.1",
    "ejs": "^3.1.8"
  }
}
